//All SQL Queries

//Customer

//SHOW ALL Customers
SELECT customerNbr AS [Customer Number], name AS Name, address AS Address, ssn AS SSN
FROM Customer

//CREATE Customer, customerNbr is autogenerated
INSERT INTO Customer VALUES ('', '', '')

//DELETE Customer, on customerNbr
DELETE Customer WHERE customerNbr = ''

//UPDATE Customer
UPDATE Customer SET name = '', address = ’', ssn = ’’ WHERE customerNbr = ''

//Destination

//SHOW ALL Destinations
SELECT city as City, country as Country, hotel as Hotel  FROM Destination 

//CREATE Destination, destinationNbr is autogenerated
INSERT INTO Destination(city, country, hotel) VALUES ('', '', '')

//DELETE Destination, on destinationNbr
DELETE FROM Destination WHERE destinationNbr = ''

//UPDATE Destination
UPDATE Destination SET city = '', country = '', hotel = '' WHERE destinationNbr = ''

//Booking

//SHOW ALL Bookings
SELECT bookingNbr AS [Booking Number], customerNbr AS [Customer Number], destinationNbr AS [Destination Number], dateOut AS Depature, dateHome AS [Home trip] FROM Booking 

//CREATE Booking, bookingNbr is autogenerated
INSERT INTO Booking (customerNbr, destinationNbr, dateOut, dateHome) VALUES ('', '', '', '')

//DELETE Booking, on bookingNbr
DELETE FROM Booking WHERE bookingNbr = ''

//UPDATE Booking
UPDATE Booking  SET dateOut = '', dateHome = '' WHERE bookingNbr = ''

//END OF QUERIES
